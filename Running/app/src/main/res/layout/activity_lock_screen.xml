<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66474747">

    <ImageView
        android:id="@+id/iv_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/animation_right_touchmove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/sliderDesc"/>

    <TextView
        android:id="@+id/tv_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/slide"
        android:textColor="#bbbbbb"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_unlock"
        app:layout_constraintEnd_toEndOf="@+id/iv_unlock"
        app:layout_constraintStart_toStartOf="@+id/iv_unlock" />

</android.support.constraint.ConstraintLayout>
